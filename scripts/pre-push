#!/usr/bin/env bash
#
# Git pre-push hook for pgn-extract-go
# This script runs comprehensive tests with race detection before pushing.
#
# Installation:
#   Option 1 (symlink): ln -sf ../../scripts/pre-push .git/hooks/pre-push
#   Option 2 (copy): cp scripts/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push
#
# To skip this hook temporarily: git push --no-verify

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions
info() { echo -e "${BLUE}[INFO]${NC} $*"; }
success() { echo -e "${GREEN}[PASS]${NC} $*"; }
warn() { echo -e "${YELLOW}[WARN]${NC} $*"; }
error() { echo -e "${RED}[FAIL]${NC} $*"; }

echo ""
echo "=========================================="
echo "  Pre-push checks for pgn-extract-go"
echo "=========================================="
echo ""

FAILED=0

# =============================================================================
# Check 1: Full test suite with race detector
# =============================================================================
info "Running full test suite with race detector..."

if ! GO111MODULE=on go test -race ./... 2>&1; then
    error "Tests with race detector failed"
    FAILED=1
else
    success "All tests passed (including race detection)"
fi

# =============================================================================
# Check 2: Build verification for multiple platforms
# =============================================================================
info "Verifying cross-platform builds..."

# Linux AMD64
if GOOS=linux GOARCH=amd64 GO111MODULE=on go build -o /dev/null ./cmd/pgn-extract/ 2>&1; then
    success "Linux AMD64 build OK"
else
    error "Linux AMD64 build failed"
    FAILED=1
fi

# macOS AMD64
if GOOS=darwin GOARCH=amd64 GO111MODULE=on go build -o /dev/null ./cmd/pgn-extract/ 2>&1; then
    success "macOS AMD64 build OK"
else
    error "macOS AMD64 build failed"
    FAILED=1
fi

# Windows AMD64
if GOOS=windows GOARCH=amd64 GO111MODULE=on go build -o /dev/null ./cmd/pgn-extract/ 2>&1; then
    success "Windows AMD64 build OK"
else
    error "Windows AMD64 build failed"
    FAILED=1
fi

# =============================================================================
# Summary
# =============================================================================
echo ""
echo "=========================================="

if [ $FAILED -ne 0 ]; then
    error "Pre-push checks FAILED"
    echo ""
    echo "Fix the issues above and try again."
    echo "To skip these checks (not recommended): git push --no-verify"
    exit 1
else
    success "All pre-push checks passed!"
    echo "=========================================="
    exit 0
fi
